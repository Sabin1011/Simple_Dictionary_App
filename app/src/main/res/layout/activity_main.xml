<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <!-- Search Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#190019"
            android:hint="Search word here"
            android:id="@+id/search_input"
            android:background="@drawable/rounded_corner"
            android:padding="12dp"
            android:layout_toLeftOf="@id/search_btn"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_btn"
            android:text="Search"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"/>

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:id="@+id/progress_bar"
            android:indeterminateTint="@color/my_primary"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Word Display -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="#021024"
        android:id="@+id/word_textview"
        tools:text="word"/>

    <!-- RecyclerView -->
    <TextView
        android:id="@+id/phonetic_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        tools:text="/t e s t/" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/meaning_recycler_view"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="12dp"
        android:backgroundTint="#021024"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9c6644"
        android:textColor="@android:color/white"/>

</LinearLayout>
